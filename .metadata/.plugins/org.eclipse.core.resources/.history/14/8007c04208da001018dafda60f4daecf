 <script>
 const weekday = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
 const states = ["Early Morning","Daytime","Afternoon","Evening","Dark Hour"];
 let time = document.getElementById("hms");
 let day = document.getElementById("day");
 let month = document.getElementById("month");
 let stat= document.getElementById("stat");
 let d= new Date();
 time.innerHTML = d.getDate();	
 month.innerHTML = d.getMonth()+1+"/";	
 day.innerHTML = weekday[d.getDay()];	
if(d.getHours()>6 && d.getHours()<10) stat.innerHTML = states[0];
else if(d.getHours()>6 && d.getHours()<10) stat.innerHTML = states[0];
else if(d.getHours()>10 && d.getHours()<13) stat.innerHTML = states[1];
else if(d.getHours()>13 && d.getHours()<17) stat.innerHTML = states[2];
else if(d.getHours()>17) stat.innerHTML = states[3];
else stat.innerHTML = states[4];
 </script>
